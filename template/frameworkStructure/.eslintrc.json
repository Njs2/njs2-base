{
  "env": {
    "commonjs": true,
    "es2020": true,
    "node": true
  },
  "extends": [
    "njs2-lint"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "globals": {
    "AutoLoad": true,
    "baseAction": true,
    "baseInitialize": true,
    "basePkg": true,
    "SQLManager": true,
    "MongoManager": true,
    "GLB": true
  },
  "rules": {},
  "overrides": [
    {
      "files": [
        "cms/**/*.js",
        "base/**/*.js",
        "helper/**/*.js",
        "i18n/**/*.js",
        "sockets/**/*.js",
        "template/**/*.js"
      ], // Or *.test.js
      "rules": {
        "require-jsdoc": "off"
      }
    }
  ]
}